@{
    Layout = null;
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>

<div class="modal fade" id="viewMessageModal" tabindex="-1" role="dialog" aria-labelledby="viewMessageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
                <!--Main modal-->
                <div class="page-content page-container " tabindex="-1" id="page-content">
                    <div class="padding">
                        <div class="row container d-flex justify-content-center">

                            <div class="col-md-6 grid-margin stretch-card">
                                <div class="card position-relative">

                                    <div class="card-body">
                                        <h4 class="card-title wave-text" style="font-family:'JetBrains Mono'">Sending message to <span>10</span> users ...</h4>

                                        <div class="template-demo">
                                            <!--Loading progress-->
                                            <div>
                                                <span style="font-family:'JetBrains Mono'; font-size:14px;">Message is being sent to <span>Samandarbek@gmail.com</span>  ....</span>
                                                <div class="progress progress-md">
                                                    <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>

                                            <!--Progressbar finishing-->
                                            <div class="progress-bar-sub">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"><span>90%</span></div>
                                                </div>
                                            </div>

                                            <!--Buttons buttom-->
                                            <div class="d-flex justify-content-between mt-4">
                                                @* <button type="button" class="btn btn-success" style="width:80px; font-family:'JetBrains Mono'">Info<span class="badge ml-1 badge-light">4</span></button> *@
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info">Info</button>
                                                    <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a id="notificationBell" class="dropdown-item" style="font-family:'JetBrains Mono'; font-size:16px; color:#28A745" href="#">
                                                            Success<span style="margin-left:5px;" class="badge badge-success">9</span>
                                                        </a>

                                                        <a class="dropdown-item" style="font-family:'JetBrains Mono'; font-size:16px; color:#DC3545" href="#">
                                                            Error<span style="margin-left:5px;" class="badge badge-danger">0</span>
                                                        </a>
                                                    </div>

                                                </div>
                                                <button type="button" class="btn btn-outline-danger" style="width:80px; font-family:'JetBrains Mono'">Close</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



           
                </div>

      </div>
  </div>
</div>
</div>


